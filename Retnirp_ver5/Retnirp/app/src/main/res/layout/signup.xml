<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/signuppage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/text_signup"
            android:id="@+id/image_text_signup"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_signup"
            android:id="@+id/image_icon_signup"
            android:layout_below="@+id/image_text_signup"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text_userid"
            android:id="@+id/image_text_userid"
            android:layout_below="@+id/image_icon_signup"
            android:layout_marginTop="20dp"
            android:maxHeight="50dp"
            android:maxWidth="100dp"
            android:layout_alignLeft="@+id/image_button_confirm"
            ></ImageView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:id="@+id/edittext_userid"
            android:textSize="12dp"
            android:layout_below="@+id/image_text_userid"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/button_duplicate"
            android:id="@+id/image_button_duplicate"
            android:layout_below="@id/image_text_userid"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@id/image_button_confirm"
            android:onClick="checkID"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:src="@drawable/text_password"
            android:id="@+id/image_text_password"
            android:layout_below="@+id/edittext_userid"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:layout_marginTop="30dp"
            ></ImageView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_password"
            android:textSize="12dp"
            android:maxWidth="250dp"
            android:layout_below="@+id/image_text_password"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:layout_marginTop="5dp"
            android:password="true"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:src="@drawable/text_confirmation"
            android:id="@+id/image_text_confirmation"
            android:layout_below="@+id/edittext_password"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:layout_marginTop="30dp"
            ></ImageView>


        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_confirmation"
            android:textSize="12dp"
            android:layout_below="@+id/image_text_confirmation"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:password="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_button_confirm"
            android:id="@+id/message"
            android:text="Please check again"
            android:layout_below="@+id/edittext_confirmation"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:textColor="#ff0000"
            />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/button_confirm"
            android:id="@+id/image_button_confirm"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/message"
            android:layout_marginTop="10dp"
            android:onClick="confirmOnclick"
            ></ImageView>

    </RelativeLayout>


</RelativeLayout>